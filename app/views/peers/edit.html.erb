<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing peer</h1>

  <%= render "form", peer: @peer %>

  <%= button_to 'Delete', peer_path(@peer), method: :delete, data: { confirm: "Are you sure you want to delete this peer?" }, class: "button inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-white bg-rose-500 hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %> 
  <%= link_to "Show this peer", @peer, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to peers", peers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
