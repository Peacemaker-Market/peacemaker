<div id="<%= dom_id peer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= peer.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Onion address:</strong>
    <%= peer.onion_address %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this peer", peer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this peer', edit_peer_path(peer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
