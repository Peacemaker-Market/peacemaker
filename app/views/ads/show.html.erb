<div class="md:w-2/3 w-full mx-auto">
  <div class="p-4">
    <div class="mt-5 border-t border-gray-200">
      <dl class="sm:divide-y sm:divide-gray-200">
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">
            Title
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-medium">
            <%= @ad.title %>
          </dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-500">
            Message
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @ad.message %>
          </dd>
        </div>

        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4"  data-tooltip="Coming soon...">
          <dt class="text-sm font-medium text-gray-500">
            Price
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            $$$
          </dd>
        </div>

        <% if @ad.peer %>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-gray-500">
              Through
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= link_to @ad.peer_name, peer_path(@ad.peer) %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="w-full flex items-center mt-4">

    <% if @ad.peer.blank? %>
      <%= link_to 'Edit this ad', edit_ad_path(@ad), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete this ad', ad_path(@ad), method: :delete, data: { confirm: "Are you sure you want to delete this ad?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium mr-2" %>
      </div>
    <% end %>
    <%= link_to "Back to #{@ad.peer.present? ? 'Marketplace' : 'Ads'}", @ad.peer.present? ? marketplace_path : ads_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% if @ad.peer.present? %>
      <%= link_to 'Message', new_ad_message_path(@ad), class: "ml-4 inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  </div>
</div>
