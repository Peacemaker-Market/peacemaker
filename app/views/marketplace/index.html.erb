<section aria-labelledby="product-heading" class="mt-6 lg:mt-0 lg:col-span-2 xl:col-span-3">
  <h2 id="product-heading" class="sr-only">Marketplace</h2>

  <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:gap-x-8 xl:grid-cols-3">
    <%= @ads.find_each do |ad| %>
      <div class="group relative bg-white border border-gray-200 rounded-lg flex flex-col overflow-hidden">
        <div class="flex align-items-center bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-40">
          <img src="https://tailwindui.com/img/ecommerce-images/category-page-02-image-card-01.jpg" alt="Eight shirts arranged on table in black, olive, grey, blue, white, red, mustard, and green." class="w-full h-full  sm:w-full sm:h-full">
        </div>
        <div class="flex-1 p-4 space-y-2 flex flex-col">
          <h3 class="text-sm font-medium text-gray-900">
            <a href="#">
              <span aria-hidden="true" class="absolute inset-0"></span>
              <%= ad.title %>
            </a>
          </h3>
          <p class="text-sm text-gray-500"><%= ad.message %></p>
          <div class="flex-1 flex flex-col justify-end">
            <p class="text-sm italic text-gray-500">
              <%= link_to ad.peer&.name, ad.peer %>
            </p>
            <p class="text-base font-medium text-gray-900">$256</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>