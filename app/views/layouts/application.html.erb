<!DOCTYPE html>
<html>
  <head>
    <title>Peacekeeper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  
  
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="lg:flex">
    <nav class="flex lg:flex-col bg-rose-700 w-full h-18 lg:h-screen lg:w-28">
      <%= nav_link_to peers_path, "peers" do %>
        Peers
      <% end %>
      <%= nav_link_to marketplace_path, marketplace_nav_controller do %>
        Market
      <% end %>

      <%= nav_link_to ads_path, ads_nav_controller do %>
        Ads
      <% end %>

      <%= nav_link_to messages_path, messages_nav_controller do %>
        Messages
      <% end %>
    </nav>
    

    <main class="flex flex-col flex-col-reverse md:flex-row lg:w-screen lg:h-screen overflow-y-scroll">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
